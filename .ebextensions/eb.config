container_commands:
  01_sh_executable:
    command: find .platform/hooks/ -type f -iname "*.sh" -exec chmod +x {} \;
  02_upgrade_sqlite:
    command: cd ~ && wget https://www.sqlite.org/2020/sqlite-autoconf-3320100.tar.gz && tar xvfz sqlite-autoconf-3320100.tar.gz && cd sqlite-autoconf-3320100 && ./configure && make && sudo make install
  03_grant_access_sqlite:
    command: chmod a+w db.sqlite3

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings
    LD_LIBRARY_PATH: /usr/local/lib
    LD_RUN_PATH: /usr/local/lib
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
    